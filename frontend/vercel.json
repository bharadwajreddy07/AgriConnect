{
    "rewrites": [
        {
            "source": "/api/:path*",
            "destination": "https://your-backend-on-render.onrender.com/api/:path*"
        },
        {
            "source": "/uploads/:path*",
            "destination": "https://your-backend-on-render.onrender.com/uploads/:path*"
        },
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ]
}